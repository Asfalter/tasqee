<div id="tasks">
	<% @tasks.each do |task| %>
		<div class="jumbotron" id="box">
				<div class="row vertical-align hidden-xs">
					<div class="col-sm-10 col-md-10  text-left">
					  <h4><b><%= task.name %></b></h4>
					  <hr id="line">
					  <h5>Due date: <%= task.finish_date %></h5>
					</div>
					<div class="col-sm-2 col-md-2 text-right ">
						<% if task.finish_date < Date.today%>
							<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal" id="task_button_desktop" >
					  		<span class="glyphicon glyphicon-list" aria-hidden="true"></span>
				  		</button>
						<% else %>
							<button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal" id="task_button_desktop" >
					  		<span class="glyphicon glyphicon-list" aria-hidden="true"></span>
				  		</button>
						<% end %>
					</div>
				</div>
				<div class="row visible-xs">
					<div class="col-xs-12  text-center">
					  <h4><b><%= task.name %></b></h3>
					  <hr id="line">
					  <h5>Due date: <%= task.finish_date %></h5>
					</div>
					<div class="col-xs-12">
					  <% if task.finish_date < Date.today%>
							<button type="button" class="btn btn-danger btn-block" data-toggle="modal" data-target="#myModal" id="task_button_mobile" >
					  		<span class="glyphicon glyphicon-list" aria-hidden="true"></span>
				  		</button>
						<% else %>
							<button type="button" class="btn btn-success btn-block" data-toggle="modal" data-target="#myModal" id="task_button_mobile" >
					  		<span class="glyphicon glyphicon-list" aria-hidden="true"></span>
				  		</button>
						<% end %>
					</div>
				</div>
		</div>
	<% end %>
	<!-- Modal -->
	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
	      </div>
	      <div class="modal-body">
	        ...
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	        <button type="button" class="btn btn-primary">Save changes</button>
	      </div>
	    </div>
	  </div>
	</div>
 </div> 


