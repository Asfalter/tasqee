<div id="tasks">

	<% @tasks.each do |task| %>
		<div class="jumbotron" id="box">
				<div class="row vertical-align hidden-xs">
					<div class="col-sm-6 col-md-6  text-left">
					  <h3><%= task.name %></h3>
					  <h4>Due date: <%= task.finish_date %></h4>
					</div>
					<div class="col-sm-6 col-md-6 text-right ">
						<% if task.finish_date < Date.today%>
							<button type="button" class="btn btn-danger" id="task_button_desktop" >
					  		<span class="glyphicon glyphicon-check" aria-hidden="true"></span>
				  		</button>
						<% else %>
							<button type="button" class="btn btn-success" id="task_button_desktop" >
					  		<span class="glyphicon glyphicon-check" aria-hidden="true"></span>
				  		</button>
						<% end %>
					</div>
				</div>

				<div class="row visible-xs">
					<div class="col-xs-12  text-center">
					  <h3><%= task.name %></h3>
					  <h4>Due date: <%= task.finish_date %></h4>
					</div>
					<div class="col-xs-12">
					  <% if task.finish_date < Date.today%>
							<button type="button" class="btn btn-danger btn-block" id="task_button_mobile" >
					  		<span class="glyphicon glyphicon-check" aria-hidden="true"></span>
				  		</button>
						<% else %>
							<button type="button" class="btn btn-success btn-block" id="task_button_mobile" >
					  		<span class="glyphicon glyphicon-check" aria-hidden="true"></span>
				  		</button>
						<% end %>
					</div>
				</div>
		</div>
	<% end %>
 </div> 


